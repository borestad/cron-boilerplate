{
  "extends": "@tsconfig/deno/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "rootDir": ".",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "checkJs": false,
    "strict": false,
    "noImplicitAny": false,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "files": [
    // "./.cron/jobs/example1.job.ts",
    // "./.cron/jobs/example2.job.ts",
    // "./.cron/*.ts",
    // "./.cron/**/*.ts"
  ],
  "include": [
    "**/*.ts",
    ".cron/**/*.ts"
  ],
  "exclude": [
    "deno.json"
  ]
}
